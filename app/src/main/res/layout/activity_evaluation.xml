<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.commonui.EvaluationActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/titleName"
            android:gravity="center_horizontal"
            android:layout_marginEnd="20dp"
            android:textColor="@color/color_black"
            android:textSize="23sp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/backImg"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_left_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/titleName"
            app:layout_constraintBottom_toBottomOf="@id/titleName"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/ratingBar"
        android:layout_marginTop="30sp"
        android:layout_marginHorizontal="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrb_fillBackgroundStars="true"
        app:mrb_progressTint="@color/color_orange"
        app:mrb_indeterminateTint="@color/Transparent"
        style="@style/Widget.MaterialRatingBar.RatingBar.Big" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="23sp"
            android:text="评分: "
            android:textColor="@color/color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ratingText"
            android:textColor="@color/color_green"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/evaEditText"
            android:hint="请输入你的看法/建议/意见......"
            android:padding="15dp"
            android:gravity="top"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:maxLength="150"
            android:textSize="20sp"
            android:background="@drawable/edittext_border"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="@id/evaEditText"
            app:layout_constraintBottom_toBottomOf="@id/evaEditText">
            <TextView
                android:id="@+id/putTextNumber"
                android:text="0"
                android:textSize="13sp"
                android:textColor="@color/color_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="13sp"
                android:textColor="@color/color_gray"
                android:text="/150 字"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:gravity="end"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="匿名"
            android:textSize="13sp"
            android:textColor="@color/color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/anonymousCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <top.androidman.SuperButton
        android:id="@+id/evaSubmitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="5dp"
        app:corner="8dp"
        app:background_normalColor="@color/orange"
        app:textSize="25sp"
        app:textColor="@color/color_white"
        app:text="提交评价"/>

</LinearLayout>